@using Microsoft.AspNetCore.Identity
@using System.Globalization
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager
@model LP2MVCWithAuth.Models.Location
@{
    ViewData["Title"] = "Editar Localização";
}

<div class="container">
    @if (SignInManager.IsSignedIn(User))
    {
        <div>
            <form asp-controller="Tarefas" asp-action="EditLocation" method="post">
                <h2>Editar Localização @Model.Id</h2>
                <hr />

                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-floating">
                    <input asp-for="Latitude" class="form-control" aria-required="true" />
                    <label asp-for="Latitude"></label>
                    <span asp-validation-for="Latitude" class="text-danger"></span>
                </div>
                <br>
                <div class="form-floating">
                    <input asp-for="Longitude" class="form-control" aria-required="true" />
                    <label asp-for="Longitude"></label>
                    <span asp-validation-for="Longitude" class="text-danger"></span>
                </div>
                <br>

                <br>
                <input asp-for="Id" value="@Model.Id" hidden />
                <input asp-for="IdTarefa" value="@Model.IdTarefa" hidden />
                <input asp-for="IsInitical" value="@Model.IsInitical" hidden />

                <button type="submit" class="w-100 btn btn-lg btn-primary">Editar</button>
            </form>
        </div>
    }
</div>